<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="medicine"
            type="com.app.assessment.room.MedicineEntity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/loadingIndicator"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"
                android:background="@color/black40">

                <ImageView
                    android:id="@+id/medicineImageView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{medicine.image}"
                    app:progressBar="@{loadingIndicatorProgressBar}" />


                <ProgressBar
                    android:id="@+id/loadingIndicatorProgressBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="8dp"
                    android:indeterminateTint="@color/black" />
            </RelativeLayout>


            <TextView
                android:id="@+id/medicineNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@{medicine.name}"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Medicine Name" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/medicineDoseTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{`Dose: ` + medicine.dose}"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:text="Dose: 10 mg" />

                    <TextView
                        android:id="@+id/medicineStrengthTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@{`Strength: ` + medicine.strength}"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:text="Strength: 500 mg" />

                    <TextView
                        android:id="@+id/medicineManufacturerTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@{`Manufacturer: ` + medicine.manufacturer}"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:text="Manufacturer: MediCare" />

                    <TextView
                        android:id="@+id/medicineUsageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@{`Usage: ` + medicine.usage}"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:text="Usage: Fever reduction" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</layout>
